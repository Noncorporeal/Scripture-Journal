@model ScriptureJournal.Pages.ScriptureNotes.EditModel

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>ScriptureNote</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="ScriptureNote.ID" />
            <div class="form-group">
                <label asp-for="ScriptureNote.Book" class="control-label"></label>
                <select asp-for="ScriptureNote.Book" asp-items="Html.GetEnumSelectList<ScriptureJournal.Models.Book>()" class="form-control"></select>
                <span asp-validation-for="ScriptureNote.Book" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ScriptureNote.Chapter" class="control-label"></label>
                <input asp-for="ScriptureNote.Chapter" class="form-control" />
                <span asp-validation-for="ScriptureNote.Chapter" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ScriptureNote.Verse" class="control-label"></label>
                <input asp-for="ScriptureNote.Verse" class="form-control" />
                <span asp-validation-for="ScriptureNote.Verse" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ScriptureNote.Note" class="control-label"></label>
                <input asp-for="ScriptureNote.Note" class="form-control" />
                <span asp-validation-for="ScriptureNote.Note" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="./Index">Back to List</a>
</div>

